<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherActivity"
    android:orientation="vertical"
    android:background="#c1e1c1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/editTextCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_file"
            android:hint="Enter city name"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#006400"
            android:padding="15dp"
            android:gravity="center"
            android:drawableStart="@drawable/location_city"
            android:layout_marginStart="25dp"
            android:text="" />

        <Button
            android:id="@+id/search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/search"
            android:layout_marginStart="7dp"
            android:backgroundTint="#006400"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_weather"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewCityWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#023020"
            android:layout_gravity="center"
            android:layout_margin="7dp"
            android:textSize="30sp"
            android:text="London, GB"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="fitXY"
                android:id="@+id/imageViewWeather"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewTempWeather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="25 C"
                    android:textColor="#023020"
                    android:textSize="50sp"

                    />

                <TextView
                    android:id="@+id/textViewWeatherConditionWeather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Few Clouds"
                    android:textAlignment="center"
                    android:textColor="#6B8E23"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details:"
            android:textColor="#023020"
            android:layout_marginLeft="20dp"
            android:textSize="30sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

                <TextView
                    android:id="@+id/textView7"
                    android:textColor="#008000"
                    android:textSize="24sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Humidity"
                    android:layout_marginTop="7dp"/>

                <TextView
                    android:id="@+id/textView8"
                    android:textColor="#008000"
                    android:textSize="24sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Max Temp"
                    android:layout_marginTop="7dp" />

                <TextView
                    android:id="@+id/textView9"
                    android:textColor="#008000"
                    android:textSize="24sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Min Temp"
                    android:layout_marginTop="7dp" />

                <TextView
                    android:id="@+id/textView10"
                    android:textColor="#008000"
                    android:textSize="24sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pressure"
                    android:layout_marginTop="7dp" />

                <TextView
                    android:id="@+id/textView11"
                    android:textColor="#008000"
                    android:textSize="24sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wind"
                    android:layout_marginTop="7dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewHumidityWeather"
                    android:textColor="#B8860B"
                    android:textSize="24sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="50%"
                    android:layout_marginTop="7dp" />

                <TextView
                    android:id="@+id/textViewMaxTempWeather"
                    android:textColor="	#8B4513"
                    android:textSize="24sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="25C"
                    android:layout_marginTop="7dp" />

                <TextView
                    android:id="@+id/textViewMinTempWeather"
                    android:textColor="#A52A2A"
                    android:textSize="24sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="25C"
                    android:layout_marginTop="7dp" />

                <TextView
                    android:id="@+id/textViewPressureWeather"
                    android:textColor="	#8B4513"
                    android:textSize="24sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:layout_marginTop="7dp" />

                <TextView
                    android:id="@+id/textViewWindWeather"
                    android:textColor="#B8860B"
                    android:textSize="24sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:layout_marginTop="7dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp">

           <!-- <Button
                android:id="@+id/button2Weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#A52A2A"
                android:text="Button" />

            <Button
                android:id="@+id/buttonWeather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#A52A2A"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:text="Button" />-->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>